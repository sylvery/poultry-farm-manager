<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %} | StoaKippa</title>
        {% block stylesheets %}
            <script src="{{asset('js/jquery.min.js')}}"></script>
            {% include "stylesheets.html.twig" %}
        {% endblock %}
    </head>
    <body class="container-fluid mx-0 px-0">
        <div class="navbar-dark bg-dark">
        {% if app.user %}
            <nav class="navbar navbar-expand-sm container">
                <a class="navbar-brand" href="{{path('home')}}">D&middot;U&middot;C&middot;K</a>
                <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#collapsibleNavId" aria-controls="collapsibleNavId"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="collapsibleNavId">
                    <div class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <nav class="nav justify-content-center">
                            {% if is_granted('ROLE_ADMINISTRATOR') %}
                            <a class="nav-link" href="{{path('transaction_index')}}">Transactions</a>
                            <a class="nav-link" href="{{path('customer_index')}}">Customers</a>
                            <a class="nav-link" href="{{path('item_index')}}">Items</a>
                            <a class="nav-link" href="{{path('user_index')}}">Employees</a>
                            {% endif %}
                        </nav>
                    </div>
                </div>
                <nav class="nav justify-content-end btn-group">
                {% if is_granted('ROLE_ACCOUNTANT') %}
                    <a role="button" class="btn btn-sm btn-outline-warning nav-link" href="#">Accounts</a>
                {% endif %}
                    <a role="button" class="btn btn-sm btn-outline-danger nav-link" href="/logout">Sign Out</a>
                </nav>
            </nav>
        {% else %}
            <div class="py-3 text-center text-warning">
                <p class="text-light">Duck &middot; Farm@n</p>
                <p class="display-1">L&middot;O&middot;G&middot;I&middot;N</p>
                <p class="small">to continue</p>
            </div>
        {% endif %}
        </div>
        <div id="main-content">
            {% block body %}{% endblock %}
        </div>
        <footer class="bg-dark py-5 text-center">
            {% block footer %}
            {% endblock %}
            <div class="container">
                <div class="col">
                    {% if app.user %}
                        <p class="text-warning">You are logged in as <span class="text-light">{{app.user.username}}</span></p>
                    {% endif %}
                    <span>
                        <a class="text-info" href="#">StoaKippa &copy; 2019 &middot; Terms and Conditions Apply</a>
                    </span>
                </div>
            </div>
        </footer>
        {% block javascripts %}
        <script src="{{asset('js/jquery.min.js')}}"></script>
        <script src="{{asset('js/bootstrap.min.js')}}"></script>
        <script src="{{asset('js/jquery-ui.min.js')}}"></script>
        <script src="{{asset('js/popper.min.js')}}"></script>
        <script src="{{asset('js/list.min.js')}}"></script>
        {% endblock javascripts %}
        <script>
            $('.date-input').datepicker({
                dateFormat: 'dd/mm/yy'
            });
        </script>
    </body>
</html>
